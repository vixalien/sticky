<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="sticky-notes">
	<enum id="@app-id@.styles">
		<value nick="yellow" value="1" />
		<value nick="pink" value="2" />
		<value nick="green" value="3" />
		<value nick="purple" value="4" />
		<value nick="blue" value="5" />
		<value nick="gray" value="6" />
		<value nick="charcoal" value="7" />
		<value nick="window" value="8" />
	</enum>
	<schema id="@app-id@" path="/com/vixalien/sticky/" gettext-domain="@gettext-package@">
		<key name="default-height" type="i">
			<default>500</default>
			<summary>Note window default height</summary>
			<description>The default height of a new sticky note</description>
		</key>
		<key name="default-width" type="i">
			<default>300</default>
			<summary>Note window default width</summary>
			<description>The default width of a new sticky note</description>
		</key>
		<key name='default-style' enum='@app-id@.styles'>
			<default>'yellow'</default>
			<summary>Default note style</summary>
			<description>The default style assigned to a new note</description>
		</key>
		<key name='confirm-delete' type='b'>
			<default>true</default>
			<summary>Confirm note deletion</summary>
			<description>Whether to confirm note deletion</description>
		</key>
		<key name="color-scheme" type="i">
			<default>0</default>
			<summary>The selected color scheme</summary>
			<description>
				The selected color scheme. 0 = follow system style, 1 = light, 2 = dark
			</description>
		</key>
		<key name="show-all-notes" type="b">
			<default>true</default>
			<summary>Show all notes</summary>
			<description>Whether to show the all notes window or note</description>
		</key>
	</schema>
</schemalist>